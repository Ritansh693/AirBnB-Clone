<%- layout("layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h2>Edit a Listing</h2>
            
            <form method="post" action="/listings/update/<%=listing._id%>" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label" style="margin-bottom: 0px;">Title</label>
                    <input id="title" name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Enter correct title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label" style="margin-bottom: 0px;">Description</label>
                    <input id="description" name="listing[description]" value="<%=listing.description%>" type="text" class="form-control" required>   
                    <div class="invalid-feedback">Enter correct description</div> 
                </div>
                Original image
                <div >
                    <img  style="height: 120px; width: 120px;" src="<%= originalUrl %>">
                </div>
                <div class="mb-3 mt-3">
                    <label for="img" class="form-label" style="margin-bottom: 0px;">Upload Listing image</label>
                    <input id="img" name="listing[image][url]" type="file" class="form-control" >
                    <div class="invalid-feedback">Enter correct image</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label" style="margin-bottom: 0px;">Price</label>
                        <input id="price" name="listing[price]" value="<%=listing.price%>" type="number" class="form-control" required>
                        <div class="invalid-feedback">Enter correct price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label" style="margin-bottom: 0px;">Country</label>
                        <input id="country" name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required>
                        <div class="invalid-feedback">Enter correct country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label" style="margin-bottom: 0px;">Location</label>
                    <input id="location" name="listing[location]" value="<%=listing.location%>" type="Sting" class="form-control" required>
                    <div class="invalid-feedback">Enter correct location</div>
                </div>
                <br>
                <button class="btn btn-danger mb-3">Edit</button>
            </form>
        </div>
    </div>
</body>
