<%- layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <h2 class="col-6 offset-3 mb-3">Login for Wanderlust</h2>
        <div class="col-6 offset-3">
            <form action= "/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label" style="margin-bottom: 0px;">Username</label>
                    <input name="username"  type="text" class="form-control" id="username" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label" style="margin-bottom: 0px;">Password</label>
                    <input name="password"  type="text" class="form-control" id="password" required>
                </div>
                <button class="btn btn-danger mt-3">Login</button>
            </form>

            <br><br>
                <p style="display: inline; margin-right: 10px;">Not a user</p>
                <a href="/signup">Register Now</a>
            
        </div>
    </div>