<%- layout("layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h2>Create a new Listing</h2>
            
            <form method="post" action="/listings/new" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label" style="margin-bottom: 0px;">Title</label>
                    <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" id="title" required>
                    <div class="invalid-feedback">Enter correct title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label" style="margin-bottom: 0px;">Description</label>
                    <input name="listing[description]" placeholder="Enter description" type="text" class="form-control" id="description" required>   
                    <div class="invalid-feedback">Enter correct description</div> 
                </div>
               
                <div class="mb-3">
                    <label for="img" class="form-label" style="margin-bottom: 0px;">Upload Lisiting image</label>
                    <input id="img" name="listing[image][url]" type="file" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label" style="margin-bottom: 0px;">Price</label>
                        <input name="listing[price]" placeholder="Enter price" class="form-control" id="price" required>
                        <div class="invalid-feedback">Enter correct price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label" style="margin-bottom: 0px;">Country</label>
                        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" id="country" required>
                        <div class="invalid-feedback">Enter correct country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label" style="margin-bottom: 0px;">Location</label>
                    <input name="listing[location]" placeholder="Enter location" type="Sting" class="form-control" id="location" required>
                    <div class="invalid-feedback">Enter correct location</div>
                </div>
                <br>
                <button class="btn btn-danger">Add</button>
            </form>
        </div>
    </div>
</body>
